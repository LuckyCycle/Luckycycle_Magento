<config>
    <tabs>
        <luckycyclesdk module="snippetsdk">
            <label>LUCKYCYCLE PLUGINS</label>
            <sort_order>100</sort_order>
        </luckycyclesdk>
    </tabs>
    <sections>
        <snippetsdk translate="label" module="snippetsdk">
            <label>API Snippet</label>
            <tab>luckycyclesdk</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <params translate="label">
                    <label>API Snippet Setting</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>12</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <api_id>
                            <label translate="label">Api Id</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </api_id>
                        <operation_id>
                            <label translate="label">Operation Id</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </operation_id>
                        <!--<use_banner_image>-->
                            <!--<label translate="label">Use banner image</label>-->
                            <!--<frontend_type>select</frontend_type>-->
                            <!--<sort_order>4</sort_order>-->
                            <!--<source_model>adminhtml/system_config_source_yesno</source_model>-->
                            <!--<show_in_default>1</show_in_default>-->
                            <!--<show_in_website>1</show_in_website>-->
                            <!--<show_in_store>1</show_in_store>-->
                        <!--</use_banner_image>-->
                        <iframe_width>
                            <label translate="label">Specify iframe width pixels </label>
                            <frontend_type>text</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </iframe_width>
                        <iframe_height>
                            <label translate="label">Specify iframe height in pixels  </label>
                            <frontend_type>text</frontend_type>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </iframe_height>
                        <!--<iframe_tagcss>-->
                            <!--<label translate="label">Specify iframe tag css  </label>-->
                            <!--<frontend_type>text</frontend_type>-->
                            <!--<sort_order>7</sort_order>-->
                            <!--<show_in_default>1</show_in_default>-->
                            <!--<show_in_website>1</show_in_website>-->
                            <!--<show_in_store>1</show_in_store>-->
                        <!--</iframe_tagcss>-->
                        <upload_defaultbanner translate="label">
                            <label>Upload Default Banner</label>
                            <comment><![CDATA[Allow image type: jpg,png,jpeg,gif. It use if banner_url from server is null]]></comment>
                            <frontend_type>image</frontend_type>
                            <backend_model>snippetsdk/bannerdefault</backend_model>
                            <upload_dir config="system/filesystem/media" scope_info="1">upload</upload_dir>
                            <base_url type="media" scope_info="1">upload</base_url>
                            <sort_order>8</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </upload_defaultbanner>
                        <payment_method_luckycyclesdk>
                            <label translate="label">Select payment method</label>
                            <frontend_type>multiselect</frontend_type>
                            <sort_order>9</sort_order>
                            <source_model>Luckycycle_Snippetsdk_Model_Paymentmethod</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </payment_method_luckycyclesdk>
                    </fields>
                </params>
            </groups>
        </snippetsdk>
    </sections>
</config>